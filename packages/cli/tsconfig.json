{
  "compilerOptions": {
    "incremental": true,
    "declaration": true,
    "importHelpers": false,
    "module": "es2020",
    "esModuleInterop": true,
    "outDir": "dist",
    "rootDirs": ["src", "e2e"],
    "strict": true,
    "target": "es2019",
    "sourceMap": true,
    "moduleResolution": "bundler"
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "src/**/__tests__",
    "e2e"
  ]
}
