{
  "compilerOptions": {
    "incremental": true,
    "declaration": true,
    "importHelpers": false,
    "module": "node16",
    "esModuleInterop": true,
    "outDir": "dist",
    "rootDirs": ["src", "e2e"],
    "strict": true,
    "skipLibCheck": true,
    "target": "es2022",
    "sourceMap": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "src/**/__tests__",
    "e2e"
  ]
}