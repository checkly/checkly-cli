{
  "name": "create-checkly",
  "version": "0.0.1-dev",
  "description": "Checkly Create CLI",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "private": false,
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "clean": "rimraf ./dist",
    "prepack": "echo \"Warning: no oclif manifest configured\"",
    "prepare": "npm run clean && tsc --build",
    "test": "jest --selectProjects unit",
    "test:e2e": "npm run prepare && jest --selectProjects E2E",
    "start": "node ./index.mjs",
    "watch": "tsc --watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/checkly/checkly-cli.git"
  },
  "author": "Checkly Engineering <support@checklyhq.com>",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/checkly/checkly-cli/issues"
  },
  "exports": {
    ".": "./index.mjs"
  },
  "bin": {
    "create-cli": "./bin/run"
  },
  "files": [
    "dist"
  ],
  "oclif": {
    "bin": "create-cli",
    "commands": {
      "strategy": "single",
      "target": "./dist/commands/bootstrap"
    },
    "plugins": [
      "@oclif/plugin-help",
      "@oclif/plugin-warn-if-update-available"
    ],
    "warn-if-update-available": {
      "timeoutInDays": 30,
      "message": "<%= config.name %> update available from <%= chalk.greenBright(config.version) %> to <%= chalk.greenBright(latest) %>. To update, run `npm install -D checkly@latest`"
    },
    "topicSeparator": " "
  },
  "homepage": "https://github.com/checkly/checkly-cli#readme",
  "dependencies": {
    "@oclif/core": "^4.2.8",
    "@oclif/plugin-help": "^6.2.26",
    "@oclif/plugin-plugins": "^5.4.36",
    "@oclif/plugin-warn-if-update-available": "^3.1.35",
    "axios": "^1.8.4",
    "chalk": "^4.1.2",
    "debug": "^4.4.0",
    "execa": "^5.1.0",
    "giget": "^1.2.5",
    "json5": "^2.2.3",
    "ora": "^5.4.1",
    "passwd-user": "^3.0.0",
    "prompts": "^2.4.2",
    "recast": "^0.23.11",
    "unique-names-generator": "^4.7.1"
  },
  "devDependencies": {
    "@types/config": "^3.3.5",
    "@types/debug": "^4.1.12",
    "@types/jest": "^29.5.14",
    "@types/luxon": "^3.3.1",
    "@types/node": "^20.3.3",
    "@types/prompts": "^2.4.9",
    "@types/uuid": "^10.0.0",
    "config": "^3.3.12",
    "jest": "^29.7.0",
    "rimraf": "^5.0.10",
    "ts-jest": "^29.2.4",
    "ts-node": "^10.9.1",
    "typescript": "^5.3.3"
  },
  "jest": {
    "projects": [
      {
        "displayName": "unit",
        "testMatch": [
          "<rootDir>/src/**/*.spec.ts"
        ],
        "preset": "ts-jest",
        "testEnvironment": "node"
      },
      {
        "displayName": "E2E",
        "testMatch": [
          "<rootDir>/e2e/__tests__/**/*.spec.ts"
        ],
        "testPathIgnorePatterns": [
          "<rootDir>/e2e/__tests__/fixtures"
        ],
        "preset": "ts-jest",
        "testEnvironment": "node"
      }
    ],
    "reporters": [
      "default",
      "github-actions"
    ]
  }
}