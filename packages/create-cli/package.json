{
  "name": "create-checkly",
  "version": "0.0.1-dev",
  "description": "Checkly Create CLI",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "private": false,
  "engines": {
    "node": "^18.19.0 || >=20.5.0"
  },
  "scripts": {
    "clean": "rimraf ./dist",
    "prepack": "echo \"Warning: no oclif manifest configured\"",
    "prepare": "npm run clean && tsc --build",
    "test": "vitest",
    "test:e2e": "vitest -c ./vitest.config.e2e.mts",
    "start": "node ./index.mjs",
    "watch": "tsc --watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/checkly/checkly-cli.git"
  },
  "author": "Checkly Engineering <support@checklyhq.com>",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/checkly/checkly-cli/issues"
  },
  "exports": {
    ".": "./index.mjs"
  },
  "bin": {
    "create-cli": "./bin/run"
  },
  "files": [
    "dist"
  ],
  "oclif": {
    "bin": "create-cli",
    "commands": {
      "strategy": "single",
      "target": "./dist/commands/bootstrap"
    },
    "plugins": [
      "@oclif/plugin-help",
      "@oclif/plugin-warn-if-update-available"
    ],
    "warn-if-update-available": {
      "timeoutInDays": 30,
      "message": "<%= config.name %> update available from <%= chalk.greenBright(config.version) %> to <%= chalk.greenBright(latest) %>. To update, run `npm install -D checkly@latest`"
    },
    "topicSeparator": " "
  },
  "homepage": "https://github.com/checkly/checkly-cli#readme",
  "dependencies": {
    "@oclif/core": "^4.8.0",
    "@oclif/plugin-help": "^6.2.36",
    "@oclif/plugin-warn-if-update-available": "^3.1.53",
    "axios": "^1.13.2",
    "chalk": "^4.1.2",
    "debug": "^4.4.3",
    "execa": "^5.1.1",
    "giget": "^1.2.5",
    "jiti": "^2.6.1",
    "json5": "^2.2.3",
    "ora": "^5.4.1",
    "passwd-user": "^3.0.0",
    "prompts": "^2.4.2",
    "recast": "^0.23.11",
    "unique-names-generator": "^4.7.1"
  },
  "devDependencies": {
    "@types/config": "^3.3.5",
    "@types/debug": "^4.1.12",
    "@types/node": "^22.14.1",
    "@types/prompts": "^2.4.9",
    "@types/uuid": "^10.0.0",
    "config": "^3.3.12",
    "cross-env": "^7.0.3",
    "rimraf": "^5.0.10",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3",
    "uuid": "^11.1.0",
    "vitest": "3.1.2"
  }
}
