{
  "name": "create-checkly",
  "version": "0.0.1-dev",
  "description": "Checkly Create CLI",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "private": false,
  "scripts": {
    "clean": "rimraf ./dist",
    "prepack": "echo \"Warning: no oclif manifest configured\"",
    "prepare": "npm run clean && tsc --build",
    "test": "jest --selectProjects unit",
    "test:e2e": "npm run prepare && jest --selectProjects E2E",
    "start": "node ./index.mjs",
    "watch": "tsc --watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/checkly/checkly-cli.git"
  },
  "author": "Checkly Engineering <support@checklyhq.com>",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/checkly/checkly-cli/issues"
  },
  "exports": {
    ".": "./index.mjs"
  },
  "bin": {
    "create-cli": "./bin/run"
  },
  "files": [
    "dist"
  ],
  "oclif": {
    "bin": "create-cli",
    "commands": "./dist/commands",
    "default": "bootstrap"
  },
  "homepage": "https://github.com/checkly/checkly-cli#readme",
  "dependencies": {
    "@oclif/core": "2.8.11",
    "@oclif/plugin-help": "5.1.20",
    "@oclif/plugin-plugins": "4.1.12",
    "axios": "1.7.4",
    "chalk": "4.1.2",
    "debug": "4.3.4",
    "execa": "5.1.0",
    "giget": "1.1.2",
    "json5": "2.2.3",
    "ora": "5.4.1",
    "passwd-user": "3.0.0",
    "prompts": "2.4.2",
    "recast": "0.23.4",
    "unique-names-generator": "4.7.1"
  },
  "devDependencies": {
    "@types/config": "3.3.3",
    "@types/debug": "4.1.7",
    "@types/glob": "8.0.0",
    "@types/jest": "29.5.3",
    "@types/luxon": "3.3.1",
    "@types/node": "20.3.3",
    "@types/prompts": "2.4.2",
    "@types/uuid": "9.0.1",
    "config": "3.3.9",
    "jest": "29.6.2",
    "rimraf": "5.0.1",
    "ts-jest": "29.0.3",
    "ts-node": "10.9.1",
    "typescript": "5.3.3"
  },
  "jest": {
    "projects": [
      {
        "displayName": "unit",
        "testMatch": [
          "<rootDir>/src/**/*.spec.ts"
        ],
        "preset": "ts-jest",
        "testEnvironment": "node"
      },
      {
        "displayName": "E2E",
        "testMatch": [
          "<rootDir>/e2e/__tests__/**/*.spec.ts"
        ],
        "testPathIgnorePatterns": [
          "<rootDir>/e2e/__tests__/fixtures"
        ],
        "preset": "ts-jest",
        "testEnvironment": "node"
      }
    ],
    "reporters": [
      "default",
      "github-actions"
    ]
  }
}
