{
  "name": "@checkly/cli",
  "version": "0.3.4",
  "description": "Checkly CLI",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "test": "jest --selectProjects unit",
    "test:e2e": "npm run prepare && NODE_CONFIG_DIR=./e2e/config jest --selectProjects E2E",
    "prepare": "rm -rf dist && tsc --build",
    "prepack": "npx oclif manifest",
    "lint": "eslint src"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/checkly/checkly-cli.git"
  },
  "author": "Checkly Engineering <support@checklyhq.com>",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/checkly/checkly-cli/issues"
  },
  "files": [
    "/bin",
    "/dist",
    "/constructs.js",
    "/constructs.d.ts",
    "/oclif.manifest.json"
  ],
  "oclif": {
    "bin": "checkly",
    "commands": "./dist/commands",
    "plugins": [
      "@oclif/plugin-help"
    ],
    "hooks": {
      "prerun": [
        "./dist/hooks/configure-api-client",
        "./dist/hooks/auth-check"
      ]
    }
  },
  "bin": {
    "checkly": "./bin/run"
  },
  "homepage": "https://github.com/checkly/checkly-cli#readme",
  "dependencies": {
    "@oclif/core": "1.23.0",
    "@oclif/plugin-help": "5.1.20",
    "@typescript-eslint/typescript-estree": "5.46.1",
    "acorn": "8.8.1",
    "acorn-walk": "8.2.0",
    "async-mqtt": "2.6.3",
    "axios": "1.2.1",
    "chalk": "4.1.2",
    "ci-info": "3.7.1",
    "conf": "10.2.0",
    "dotenv": "16.0.3",
    "glob": "8.0.3",
    "indent-string": "4.0.0",
    "inquirer": "8.2.3",
    "jwt-decode": "3.1.2",
    "log-symbols": "4.1.0",
    "luxon": "3.2.0",
    "open": "8.4.0",
    "uuid": "9.0.0"
  },
  "devDependencies": {
    "@checkly/eslint-config": "0.14.1",
    "@types/config": "3.3.0",
    "@types/glob": "8.0.0",
    "@types/inquirer": "8.2.3",
    "@types/jest": "29.2.4",
    "@types/luxon": "3.2.0",
    "@types/node": "18.11.18",
    "@types/uuid": "9.0.0",
    "@types/ws": "8.5.3",
    "@typescript-eslint/eslint-plugin": "5.46.1",
    "@typescript-eslint/parser": "5.46.1",
    "config": "3.3.8",
    "eslint": "8.30.0",
    "jest": "29.3.1",
    "ts-jest": "29.0.3",
    "ts-node": "10.9.1",
    "typescript": "4.9.4"
  },
  "eslintConfig": {
    "rules": {
      "@typescript-eslint/type-annotation-spacing": 2,
      "@typescript-eslint/no-explicit-any": 0,
      "@typescript-eslint/ban-ts-comment": 0,
      "no-console": 2
    },
    "extends": [
      "@checkly/eslint-config",
      "plugin:@typescript-eslint/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint"
    ],
    "overrides": [
      {
        "files": ["src/commands/*", "src/reporters/*"],
        "rules": {
          "no-console": 0
        }
      }
    ]
  },
  "jest": {
    "projects": [
      {
        "displayName": "unit",
        "testMatch": [
          "<rootDir>/src/**/*.spec.ts"
        ],
        "preset": "ts-jest",
        "testEnvironment": "node"
      },
      {
        "displayName": "E2E",
        "testMatch": [
          "<rootDir>/e2e/__tests__/**/*.spec.ts"
        ],
        "preset": "ts-jest",
        "testEnvironment": "node"
      }
    ],
    "reporters": ["default", "github-actions"]
  }
}
