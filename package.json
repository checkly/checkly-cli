{
  "name": "@checkly/cli",
  "version": "0.2.4",
  "author": "Nacho Anaya <nacho@checklyhq.com>",
  "description": "Checkly CLI",
  "license": "MIT",
  "homepage": "https://github.com/checkly/checkly-cli",
  "repository": {
    "type": "git",
    "url": "https://github.com/checkly/checkly-cli.git"
  },
  "bugs": "https://github.com/checkly/checkly-cli/issues",
  "contributors": [
    "Nico Domino <nico@checklyhq.com>"
  ],
  "keywords": [
    "checkly",
    "monitoring",
    "browser-check",
    "oclif",
    "cli"
  ],
  "main": "bin/run",
  "oclif": {
    "commands": "./src/commands",
    "bin": "checkly",
    "plugins": [
      "@oclif/plugin-help"
    ]
  },
  "bin": {
    "checkly": "./bin/run"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "files": [
    "/bin",
    "/npm-shrinkwrap.json",
    "/oclif.manifest.json",
    "/src",
    "/sdk"
  ],
  "scripts": {
    "build": "echo NO BUILD",
    "dev:debug": "NODE_ENV=development CONSOLA_LEVEL=5 ./bin/run",
    "dev": "NODE_ENV=development ./bin/run",
    "postpack": "rm -f oclif.manifest.json",
    "lint": "eslint .",
    "prepack": "oclif-dev manifest && oclif-dev readme",
    "test": "mocha --grep 'e2e.*' -i --exit && mocha --grep 'e2e.*' --exit",
    "test:coverage": "nyc npm run test",
    "test:watch": "mocha --watch --exit",
    "pack": "oclif-dev pack",
    "docs": "oclif-dev readme",
    "version": "oclif-dev readme && git add README.md",
    "version:pr": "node ./scripts/version-pr.js",
    "semantic-release": "semantic-release"
  },
  "dependencies": {
    "@oclif/command": "1.8.16",
    "@oclif/config": "1.18.2",
    "@oclif/dev-cli": "1.26.10",
    "@oclif/plugin-help": "3.2.10",
    "@oclif/test": "1.2.8",
    "@rollup/plugin-commonjs": "21.0.1",
    "@rollup/plugin-typescript": "8.3.0",
    "@rollup/plugin-virtual": "2.0.3",
    "axios": "0.21.2",
    "builtin-modules": "3.2.0",
    "chalk": "4.1.1",
    "cli-fuzzy-search": "2.0.0",
    "cli-spinners": "2.6.1",
    "conf": "8.0.0",
    "consola": "2.15.0",
    "console.table": "0.10.0",
    "date-fns": "2.28.0",
    "git-remote-origin-url": "3.1.0",
    "inquirer": "8.2.0",
    "joi": "17.5.0",
    "jwt-decode": "3.1.2",
    "lodash.isequal": "4.5.0",
    "mqtt": "4.3.2",
    "open": "8.4.0",
    "ora": "5.4.1",
    "rollup": "2.62.0",
    "text-table": "0.2.0",
    "update-notifier": "5.1.0",
    "uuid": "8.3.2",
    "yaml": "1.10.2"
  },
  "devDependencies": {
    "@babel/eslint-parser": "7.16.5",
    "@checkly/eslint-config": "0.8.6",
    "@commitlint/cli": "15.0.0",
    "@commitlint/config-conventional": "16.0.0",
    "chai": "4.3.4",
    "dotenv": "10.0.0",
    "eslint": "8.4.1",
    "fancy-test": "1.4.10",
    "jest": "27.4.5",
    "lint-staged": "12.1.7",
    "memfs": "3.4.1",
    "mocha": "9.1.3",
    "mock-require": "3.0.3",
    "nock": "13.2.1",
    "nyc": "15.1.0",
    "semantic-release": "^18.0.1",
    "simple-git-hooks": "2.7.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "release": {
    "branches": [
      "main",
      {
        "name": "next",
        "prerelease": true
      }
    ],
    "plugins": [
      "@semantic-release/release-notes-generator",
      [
        "@semantic-release/commit-analyzer",
        {
          "releaseRules": [
            {
              "type": "feat",
              "release": "patch"
            }
          ]
        }
      ],
      "@semantic-release/npm"
    ]
  },
  "simple-git-hooks": {
    "pre-commit": "npx --no-install lint-staged",
    "commit-msg": "npx --no-install commitlint --edit \"$1\""
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,md,html,css}": "eslint --cache --fix"
  }
}
